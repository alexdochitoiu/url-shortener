{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "target": "es6",
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "types": ["src/main/types.ts"],
      "@utils/*": ["src/main/utils/*"],
      "@models/*": ["src/main/models/*"],
      "@dtos/*": ["src/main/dtos/*"],
      "@interfaces/*": ["src/main/interfaces/*"],
      "@repositories/*": ["src/main/repositories/*"],
      "@services/*": ["src/main/services/*"],
      "@controllers/*": ["src/main/controllers/*"],
      "@routers/*": ["src/main/routers/*"],
      "@validators/*": ["src/main/validators/*"],
      "@infra/*": ["src/main/infra/*"],
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*.ts", "src/test"],
  "exclude": ["node_modules", "jest.config.ts"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
